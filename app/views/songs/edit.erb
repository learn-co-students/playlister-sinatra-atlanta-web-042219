<h1>Updating "<%= @song.name %>"</h1>

<form method="POST" action="/songs/<%= @song.slug %>">
	<input value="PATCH" type="hidden" name="_method">

	<h3>Artist name </h3><input id="Artist Name" name="artist_name" value="<%= @song.artist.name %>"><br><br>

	<h3>Genre(s)</h3>
	<% Genre.all.each do |genre| %>
		<%= genre.name %><input type="checkbox" id="<%= genre.name %>" name="genre_ids[]" value="<%= genre.id %>"><br>
	<% end %><br>

	<input type="submit" value="Save">
</form>